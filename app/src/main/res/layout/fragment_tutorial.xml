<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".tutorial"
    android:background="#FFFFFF">


    <ImageView
        android:id="@+id/backgroundmap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rotation="-90"
        android:scaleX="1.7"
        android:scaleY="1.7"
        android:src="@drawable/spaceblue"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />


    <TextView
        android:id="@+id/button_default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="16dp"
        android:alpha="0"
        android:text="ShowCaseView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/button_actionCall2"
        android:layout_width="96dp"
        android:layout_height="50dp"
        android:alpha="0"
        android:text="ShowCaseView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/button_actionCall3"
        android:layout_width="88dp"
        android:layout_height="54dp"
        android:layout_marginEnd="32dp"
        android:alpha="0"
        android:text="ShowCaseView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/button_actionCall"
        android:layout_width="59dp"
        android:layout_height="51dp"
        android:alpha="0"
        android:text="ShowCaseView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--<Button
        android:id="@+id/button_custom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.1"
        android:layout_marginBottom="356dp"
        android:onClick="lanzaShowCaseView"
        android:text="ShowCaseView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />-->

    <TextView
        android:id="@+id/button_custom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:onClick="lanzaShowCaseView"
        android:text="@string/tuto"
        android:textSize="42dp"
        app:layout_constraintBottom_toBottomOf="@+id/backgroundmap"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/backgroundmap" />

    <TextView
        android:id="@+id/button_showcase"
        android:layout_width="60dp"
        android:layout_height="53dp"
        android:alpha="0"
        android:text="ShowCaseView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <include android:id="@+id/fragment_menutopnav"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/fragment_menutopnav"/>

    <include
        android:id="@+id/fragment_menubotnav"
        layout="@layout/fragment_menubotnav"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="1dp" />

</androidx.constraintlayout.widget.ConstraintLayout>